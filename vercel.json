{
    "version": 2,
    "builds": [
      { "src": "index.mjs", "use": "@vercel/node" },
      { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/src/(.*)", "dest": "/src/$1" },
      { "src": "/img/(.*)", "dest": "/public/img/$1" },
      { "src": "/(.*)", "dest": "/index.mjs" }
    ]
  }